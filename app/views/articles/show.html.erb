<div class="mt-10">
  <div class="sm:flex justify-between items-center">
    <h1>
      <%= tag.p @article.title, style: "color: #{@article.title_color}", class:
      "text-2xl" %>
    </h1>
    <button class="bg-indigo-500 p-2 rounded text-white sm:mt-2 text-sm float-right mt-6">
      <%= link_to "Regresar al home", "/", class: "p-2" %>
    </button>
  </div>

  <div class="sm:mt-10 mt-20 bg-white p-4 rounded"><%= @article.content %></div>
  <div class="mt-4">
    <button class="bg-indigo-500 p-2 rounded text-white mt-2 text-sm">
      <%= link_to "Edit article", "/article/#{@article.id}/edit", class: "p-2"
      %>
    </button>
    <button class="bg-rose-400 p-2 rounded text-white mt-2 text-sm">
      <%= link_to "Delete article", "/article/#{@article.id}", method: :delete,
      class: "p-2" %>
    </button>
  </div>
  <%= render "comments/form" %>
</div>
