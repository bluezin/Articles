<div class="mt-10">
  <div class="flex justify-between items-center">
    <h1>
      <%= tag.p @article.title, style: "color: #{@article.title_color}", class:
      "text-2xl" %>
    </h1>
    <button class="bg-indigo-500 p-2 rounded text-white mt-2 text-sm">
      <%= link_to "Regresar al home", "/", class: "p-2" %>
    </button>
  </div>

  <div class="mt-10 bg-white p-4 rounded"><%= @article.content %></div>
  <div class="mt-4">
    <button class="bg-indigo-500 p-2 rounded text-white mt-2 text-sm">
      <%= link_to "Edit article", "/article/#{@article.id}/edit", class: "p-2"
      %>
    </button>
    <button class="bg-rose-400 p-2 rounded text-white mt-2 text-sm">
      <%= link_to "Delete article", "/article/#{@article.id}", method: :delete,
      class: "p-2" %>
    </button>
  </div>

  <div class="mt-10 font-bold">
    <h1 class="text-2xl">Comments about this article:</h1>
    <div class="flex gap-6">
      <input
        class="w-full p-2 rounded relative top-4"
        placeholder="write a comment ..."
      />
      <button
        class="bg-indigo-500 rounded text-white text-sm px-4 relative top-4"
      >
        Send
      </button>
    </div>
  </div>
</div>
